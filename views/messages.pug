extends layout

block header
  div(class='jumbotron text-center')
    h1= title
    p= message

block content
  div(class='container')
    div(class='row')
      div(class='col-sm-2')
        a(href='/messages') Messages
        br
        a(href='/users/logout') Logout
      //-div(class='col-sm-4')
        p Welcome to #{title}!
        br
        p= message
      div(class='col-sm-10')
        table
          tr
            th Title
            th Author
            th Date
          each msg in messages
            //- print out title, author, date of each message???
            tr
              td 
                a(href='messages/'+msg._id) #{msg.title}
              td= msg.author
              td= msg.createdAt
          form(action="/messages", method='post')
            p Title
            input(type='text', name="title", size='60', maxlength='1000')
            p Message
            input(type='text', name="content", size='60', maxlength='1000')
            p Image URL(Optional)
            input(type='text', name="imageURL", size='60', maxlength='1000')
            input(type='hidden', name='messageid', value=message._id)
            input(type="submit", value="Add message")


